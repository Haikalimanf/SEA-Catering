<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date_range"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="8dp" />

        <AutoCompleteTextView
            android:id="@+id/dateRangeSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_30_days"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="none"
            android:fontFamily="@font/poppins" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="12dp"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Card 1 -->
            <LinearLayout
                style="@style/StatCard"
                android:backgroundTint="@android:color/white">

                <TextView
                    style="@style/StatTitle"
                    android:text="@string/new_subscriptions" />

                <TextView
                    android:id="@+id/newSubscriptions"
                    style="@style/StatValue"
                    tools:text="1,234" />

            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                style="@style/StatCard"
                android:backgroundTint="@android:color/white">

                <TextView
                    style="@style/StatTitle"
                    android:text="@string/total_revenue" />

                <TextView
                    android:id="@+id/total_revenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:ellipsize="none"
                    android:singleLine="false"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:autoSizeTextType="none"
                    style="@style/StatValue"
                    tools:text="Rp8.789.000.000" />

            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                style="@style/StatCard"
                android:backgroundTint="@android:color/white">

                <TextView
                    style="@style/StatTitle"
                    android:text="@string/reactivated_subscriptions" />

                <TextView
                    android:id="@+id/reactivatedSubscriptions"
                    style="@style/StatValue"
                    tools:text="345" />

            </LinearLayout>

            <LinearLayout
                style="@style/StatCard"
                android:backgroundTint="@android:color/white">

                <TextView
                    style="@style/StatTitle"
                    android:text="@string/total_active_subscribers" />

                <TextView
                    android:id="@+id/totalActiveSubscribers"
                    style="@style/StatValue"
                    tools:text="10,112" />

            </LinearLayout>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/net_subscription_growth"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPersenNetSubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_15"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:text="@string/log_out"
            android:textColor="@android:color/white"
        />

    </LinearLayout>
</ScrollView>
