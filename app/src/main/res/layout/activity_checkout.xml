<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_subscription_plan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/border_rounded_gray"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/username"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jhon Doe"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/noPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="08912124342"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/plan_selection"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/plan_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Protein Plan"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/meal_plan"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/meal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Only Breakfast"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delivery_days"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/delivery_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sunday, Tuesday"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allergies"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="I have a Sigma"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Rp1.700.000"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/checkout"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/button_rounded" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/red"
        android:background="@drawable/button_rounded" />
</LinearLayout>
